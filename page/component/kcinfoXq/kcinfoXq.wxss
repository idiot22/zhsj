/* pages/cinema/tzxq/tzxq.wxss */
page{
  background: white;
}
.wrapper{
  padding-bottom: 80rpx; 
  overflow: hidden;
}
header{
    font-size:1em
}

#xq-img{ 
    box-sizing: border-box; 
    width: 100%;
    overflow: hidden;
    padding: 0.5em 1em
}
#xq-img image{
  width: 100%;
  height: 9em;
  border-radius: 4px;
}
#xq-title{
  padding-bottom: 1em; 
}
#title{
    font-size:1.1em;
    color:black;
    padding: 0.5em 1em;
    text-align: center;
}
.touxiang{
    width:1.5em;
    height:1.5em;
    background-size:100% 1.5em;
    border-radius: 1em ;
    display: inline-block;
    float: left;
    margin-right:0.2em 
}
.touxiang image{
    width:1.5em;
    height:1.5em;
}
#xqicon{
  overflow: hidden;
  margin-left:1em; 
}
#xqicon span{
 font-size: 0.5em;
 color: rgb(124, 124, 124);
 float: left;
}
#xqicon{
    position: relative;
}
#icon-kuai{
    float: left;
    line-height: 1.5em;
    margin-right:1em ;
    font-size:0.75em;
    color: rgb(97, 97, 97);
}
#time{
    width:1.1em;
    height:1.1em;
    background-size:100% 1.4em;
    margin-top:0.2em 
}
#time image{
    width:1.1em;
    height:1.1em;
}
#see{
    margin-top:0.2em ;
    width:1.1em;
    height:1em;
    border-radius: 0em;
    background-size:100% 1.5em;
}
#see image{
    width:100%;
    height:1em;
}
#wenzhang{
    text-indent:2em;
    font-size:0.8em;
    color: rgb(145, 145, 145);
    border-bottom: 1px solid rgb(241, 241, 241) 
}
#wenzhang view{
  padding: 0.3em 1.1em;
  line-height:1.5em;
  letter-spacing: 0.1em;
}

/*按钮*/
.btn{
  position:fixed;
  bottom: 0px;
  background: white;
  z-index: 10;
  width: 100%;
  display: flex;
  align-items: center;
  box-shadow:0px -2px 20px rgb(209, 209, 209);
  color: rgb(80, 80, 80);
  font-size:35rpx;
  height:75rpx;
}
.btn-left{
  text-align: center;
  width:50%;
  border-right: 1px solid rgb(202, 202, 202)
}
.btn-right{
  width: 50%;
  text-align: center;
}

/*附件*/
 .fujian-content{
   padding: 1em 1em;
 }
   .fujian-wrapper{
     border-bottom: 1px solid rgb(241, 241, 241) ;
     padding: 0.5em 1em;
     display: flex;
     align-items: center;
   }
  .fujian-wrapper image{
    width: 45rpx;
    height: 45rpx;
    padding-right: 0.5em
  }
  .fujian-wrapper text{
      font-size:30rpx;
      color: rgb(70, 70, 70);
    }